#!/usr/bin/env bash

npx @bookshop/generate

if [[ $TRANSLATE != "true" ]];
then
  echo "ðŸŒ¹Generating site with Rosey"
  npx rosey generate --source dist
  echo "ðŸŒ¹Generated a base.json from the built site"
  echo "ðŸŒ¹Checking locales files against base.json to see if there are any differences"
  npx rosey check
  echo "ðŸŒ¹Generating translation files from base.json"
  node utils/generateTranslationFiles.cjs
  echo "ðŸŒ¹Generated translation files to be edited"
  echo "ðŸŒ¹Generating the locales files Rosey needs from our translation files"
  node utils/generateLocales.cjs
  echo "ðŸŒ¹Generated locales"
fi

if [[ $TRANSLATE == "true" ]];
then
  echo "Translating site with Rosey"
  # We only want this to run on our production site, as it can interfere with CloudCannon CMS's visual editor
  # There's a little bit of shuffling around here to ensure the translated site ends up where CloudCannon picks up your site
  mv ./dist ./untranslated_site                  
  npx rosey build --source untranslated_site --dest dist
fi